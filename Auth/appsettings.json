{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityConnection": "Server=.;Database=Identity;Trusted_Connection=true;Encrypt=false"
  },
  "SendGrid": {
    "ApiKey": "YourSendGridApiKey",
    "FromEmail": "your-email@example.com",
    "FromName": "Your Name"
  },
  "JWT": {
    "Key": "This_is_a_very_long_key_that_is_at_least_32_characters_long_for_security",
    "ValidIssuer": "https://localhost:7154",
    "ValidAudience": "MySecureKey",
    "DurationInDays": "2"
  }
}
